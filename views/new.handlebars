<div class="row">
  <h1 class="text-center">New Post</h1>
  <div class="col-6 offset-3">
    <form action="/slopes" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="title"
          name="post[title]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="location"
          name="post[location]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Image Url</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="image"
          name="post[image]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="difficulty">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="difficulty-label">250</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0"
            aria-describedby="price-label"
            name="post[price]"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Description</label>
        <textarea
          autocomplete="off"
          class="form-control"
          type="text"
          id="description"
          name="post[description]"
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Add Post</button>
      </div>
    </form>
  </div>
</div>
